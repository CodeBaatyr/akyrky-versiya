{% extends "::base.html.twig" %}
 {% block stylesheets %}
     {{ parent() }}
     <style>

         #message-auth{
             display: none;
             font-size: 87%;
             color: #FDB6B6;
         }
         #message-auth-adap{
             display: none;
             font-size: 87%;
             color: #FDB6B6;
         }
         .auth-loading{
             margin-right: 35px;
             display: none;

         }
         span{
             margin-right: 40px;
         }
         #reg_login{
             font-size: 93%;
         }
         #reg_password{
             font-size: 93%;
         }
     </style>

 {% endblock %}
{% block body %}
    <div class="loading">
    <div class="overlay-loader">
    <div class="loader">
    <div></div>
